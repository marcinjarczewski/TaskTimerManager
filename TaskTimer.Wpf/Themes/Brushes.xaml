<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Color x:Key="selectedMenuColorDef">#ffffff</Color>
    <StaticResource x:Key="selectedMenuColorRes" ResourceKey="selectedMenuColorDef"/>
    <SolidColorBrush x:Key="selectedMenuColorStatic" Color="{StaticResource selectedMenuColorDef}"/>
    <SolidColorBrush x:Key="SelectedMenuColor" Color="{DynamicResource selectedMenuColorRes}"/>

    <Color x:Key="menuColorDef">#FF05A6BF</Color>
    <StaticResource x:Key="menuColorRes" ResourceKey="menuColorDef"/>
    <SolidColorBrush x:Key="MenuColor" Color="{DynamicResource menuColorRes}"/>


    <LinearGradientBrush  x:Key="ClientBrush" EndPoint="1,0.5" Opacity="0.8">
        <GradientStop Color="#76E4E8" Offset="0.0" />
        <GradientStop Color="#70AEB3" Offset="0.5" />
    </LinearGradientBrush>

    <Color x:Key="backgroundColorDef">#c2d7f5</Color>
    <StaticResource x:Key="backgroundColorRes" ResourceKey="backgroundColorDef"/>
    <SolidColorBrush x:Key="BackgroundColor" Color="{DynamicResource backgroundColorRes}"/>

    <Color  x:Key="pausedItemColorDef">#FFFF00</Color>
    <StaticResource x:Key="pausedItemColorRes" ResourceKey="pausedItemColorDef"/>
    <SolidColorBrush x:Key="PausedItemColor" Opacity="0.2" Color="{DynamicResource pausedItemColorRes}"/>

    <SolidColorBrush x:Key="PlayItemColor" Opacity="0.2" Color="#FF33F533"/>
</ResourceDictionary>